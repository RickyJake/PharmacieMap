<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
	<style name="Theme.Pharmacie" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_pharmacie</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Pharmacie</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Pharmacie</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Pharmacie</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Pharmacie</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Pharmacie</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_pharmacie</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_pharmacie</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Pharmacie</item>
        
        
    </style>

    <style name="ActionBar.Solid.Pharmacie" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_pharmacie</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_pharmacie</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_pharmacie</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Pharmacie</item>
    </style>

    <style name="ActionBar.Transparent.Pharmacie" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_pharmacie</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Pharmacie</item>
    </style>

    <style name="PopupMenu.Pharmacie" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_pharmacie</item>	
    </style>

    <style name="DropDownListView.Pharmacie" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_pharmacie</item>
    </style>

    <style name="ActionBarTabStyle.Pharmacie" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_pharmacie</item>
    </style>

    <style name="DropDownNav.Pharmacie" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_pharmacie</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_pharmacie</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_pharmacie</item>
    </style>
    
    <style name="ProgressBar.Pharmacie" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_pharmacie</item>
    </style>
    
    <style name="ActionButton.CloseMode.Pharmacie" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_pharmacie</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Pharmacie.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Pharmacie</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Pharmacie</item>
    </style>

</resources>
