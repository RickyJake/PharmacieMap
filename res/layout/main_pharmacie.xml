<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:text="Medicament"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/textview_border">
        
         <TextView 
	            android:id="@+id/txtProduit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Nom :"/>
        
	        <TextView 
	            android:id="@+id/nomProduit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"/>
        
        
        
        <TextView 
            android:id="@+id/txtPrixProduit"
            android:layout_below="@+id/txtProduit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix :"/>
        
        <TextView 
            android:id="@+id/prixProduit"
            android:layout_below="@+id/nomProduit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
        
        <TextView 
            android:id="@+id/txtDescriptionProduit"
            android:layout_below="@+id/txtPrixProduit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description :"/>
        
        <TextView 
            android:id="@+id/descriptionProduit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDescriptionProduit"
            android:background="@drawable/textview_border"/>
        
    </RelativeLayout>
    
    <TextView 
        android:text="Pharmacie"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/textview_border">
        
        <TextView 
            android:id="@+id/txtNomPharma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom :"/>
        
        <TextView 
            android:id="@+id/nomPharma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtNomPharma"/>
        
        <TextView 
            android:id="@+id/txtDescription"
            android:layout_below="@+id/txtNomPharma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description :"/>
        
        <TextView 
            android:id="@+id/descriptionPharma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDescription"
            android:background="@drawable/textview_border"/>
        
    </RelativeLayout>
    

</LinearLayout>
